n=int(input("Enter a number:"))
choice=int(input("please choose option \n1.sum\n2.product\n"))
sum=0
product=1
if choice==1:
    for i in range(1,n+1):
        sum=sum+i
    print("sum=",sum)
elif choice==2:
    for i in range(1,n+1):
        product=product*i
    print("product=",product)
else:
    print("choose only 1 or 2")





